<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6EEE3"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_250sdp"
        android:layout_height="wrap_content"
        android:id="@+id/cardView"
        android:layout_centerInParent="true"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_2sdp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <project.namramuni.CustomView.CustomTextview
                android:id="@+id/a1"
                android:layout_marginTop="@dimen/_20sdp"
                style="@style/shibirText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Enter OTP" />
            <project.namramuni.CustomView.CustomTextview
                android:id="@+id/a2"
                android:layout_below="@+id/a1"
                android:layout_marginTop="@dimen/_10sdp"
                style="@style/shibirText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_8sdp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_marginBottom="@dimen/_0sdp"
                android:text="We have sent you access code" />
            <project.namramuni.CustomView.CustomTextview
                android:id="@+id/a3"
                android:layout_below="@+id/a2"
                style="@style/shibirText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_8sdp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_marginTop="@dimen/_2sdp"
                android:text="Via SMS for mobile number verification" />

            <LinearLayout
                android:id="@+id/line"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@id/a3"
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_50sdp"
                android:layout_marginBottom="@dimen/_40sdp"
                >

                <project.namramuni.CustomView.CustomEditview
                    android:id="@+id/t1"
                    style="@style/OtpText"
                    android:layout_width="match_parent" />

                <project.namramuni.CustomView.CustomEditview
                    android:id="@+id/t2"
                    style="@style/OtpText"
                    android:layout_width="match_parent" />

                <project.namramuni.CustomView.CustomEditview
                    android:id="@+id/t3"
                    style="@style/OtpText"
                    android:layout_width="match_parent" />

                <project.namramuni.CustomView.CustomEditview
                    android:id="@+id/t4"
                    style="@style/OtpText"
                    android:layout_width="match_parent" />

                <project.namramuni.CustomView.CustomEditview
                    android:id="@+id/t5"
                    style="@style/OtpText"
                    android:layout_width="match_parent" />

                <project.namramuni.CustomView.CustomEditview
                    android:id="@+id/t6"
                    style="@style/OtpText"
                    android:layout_width="match_parent" />

            </LinearLayout>
            <project.namramuni.CustomView.CustomButton
                android:includeFontPadding="false"
                app:font1="@string/font1"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_below="@+id/line"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:background="@color/heading"
                android:text="submit"
                android:layout_marginBottom="@dimen/_30sdp"
                android:id="@+id/btnSubmit"
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp" />


            <ImageView
                android:id="@+id/imgclose"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_alignParentRight="true"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/ic_close_black_24dp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <project.namramuni.CustomView.CustomTextview
        android:id="@+id/resend"
        android:layout_below="@+id/cardView"
        android:layout_marginTop="@dimen/_30sdp"
        style="@style/shibirText2"
        android:padding="@dimen/_20sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Resend OTP" />
</RelativeLayout>