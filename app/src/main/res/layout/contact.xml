<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/rlv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/_12sdp"
        android:paddingTop="@dimen/_8sdp"
        android:paddingRight="@dimen/_12sdp"
        android:paddingBottom="@dimen/_12sdp">

        <project.namramuni.CustomView.CustomTextview
            android:id="@+id/titleHeading"
            android:layout_width="match_parent"
            android:lineSpacingExtra="@dimen/_2sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_toLeftOf="@+id/img1"
            android:text="salkjdk has dhakshdsh fghgk "
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp"
            app:font1="@string/font1" />

        <LinearLayout
            android:layout_marginTop="@dimen/_4sdp"
            android:id="@+id/lnrPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:scaleType="fitXY"
                android:src="@android:drawable/stat_sys_phone_call"
                android:tint="@color/black" />

            <project.namramuni.CustomView.CustomTextview
                android:id="@+id/txtPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:includeFontPadding="false"
                android:layout_toLeftOf="@+id/img1"
                android:layout_toRightOf="@+id/img"
                android:text="salkjdk has dhakshdsh fghgk "
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                app:font1="@string/font2" />
        </LinearLayout>

    <LinearLayout
        android:id="@+id/lnrAddress"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img2"
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_below="@+id/img"
            android:layout_marginTop="@dimen/_2sdp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_placeholder"/>

        <project.namramuni.CustomView.CustomTextview
            android:id="@+id/txtsubTitle"
            android:lineSpacingExtra="@dimen/_2sdp"
            android:layout_width="match_parent"
            android:includeFontPadding="false"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_8sdp"
            android:text="salkjdk has dhakshdsh fghgk "
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            app:font1="@string/font2" />
    </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/_28sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:background="@color/gray1"></View>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
