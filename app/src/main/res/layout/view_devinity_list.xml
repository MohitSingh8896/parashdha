<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/clickSongs"
    android:layout_weight="1"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_110sdp"
        android:layout_marginLeft="@dimen/_7sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginRight="@dimen/_7sdp"
        android:layout_marginBottom="@dimen/_4sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rlvImage"
                android:layout_width="@dimen/_165sdp"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/imgBook"
                    android:layout_width="@dimen/_165sdp"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY" />
                <pl.droidsonroids.gif.GifImageView
                    android:visibility="gone"
                    android:alpha="0.5"
                    android:padding="@dimen/_32sdp"
                    android:background="@drawable/transparent_smallstrip"
                    android:src="@drawable/audiowave"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/audioPlay" />
                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="@dimen/_165sdp"
                    android:layout_height="match_parent"
                    android:indeterminateTint="@color/heading"
                    android:padding="@dimen/_30sdp"
                    android:scaleType="fitXY"
                    android:visibility="gone" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/icon"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_audio"
                android:backgroundTint="@color/white"
                android:visibility="gone" />

            <LinearLayout
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:paddingBottom="@dimen/_3sdp"
                android:layout_toRightOf="@+id/rlvImage"
                android:orientation="vertical">

                <project.namramuni.CustomView.CustomTextview
                    android:id="@+id/textTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="@dimen/_2sdp"
                    android:lines="3"
                    android:minLines="3"
                    android:text="@string/app_name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp"
                    app:font1="@string/font1" />

                <project.namramuni.CustomView.CustomTextview
                    android:id="@+id/textSubTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="@dimen/_2sdp"
                    android:text="@string/app_name"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/_10sdp"
                    app:font1="@string/font1" />

                <project.namramuni.CustomView.CustomTextview
                    android:id="@+id/textCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="@dimen/_1sdp"
                    android:textColor="@color/darkred"
                    android:textSize="@dimen/_9sdp"
                    android:visibility="gone"
                    app:font1="@string/font1" />

                <project.namramuni.CustomView.CustomButton
                    android:id="@+id/btnMeditation"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/button"
                    android:backgroundTint="@color/heading0"
                    android:includeFontPadding="false"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:text="Meditate Now"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp"
                    app:font1="@string/font1" />
            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>