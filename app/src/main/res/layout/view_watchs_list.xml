<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_105sdp"
    android:layout_margin="@dimen/_4sdp"
    android:layout_marginRight="@dimen/_7sdp"
    android:layout_marginLeft="@dimen/_7sdp"
    android:layout_marginTop="@dimen/_4sdp"
    android:layout_marginBottom="@dimen/_4sdp"
    android:layout_weight="1"
    android:id="@+id/videocardview"
    android:orientation="horizontal">

    <LinearLayout
        android:weightSum="2"
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_weight="0.9"
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_weight="1.1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:layout_toRightOf="@+id/rlvYoutub"
            android:orientation="vertical">

            <project.namramuni.CustomView.CustomTextview
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:lines="4"
                android:text="fdsfsdfds"
                android:maxLines="4"
                style="@style/homeText1"
                android:textColor="@color/heading1" />

            <project.namramuni.CustomView.CustomTextview
                android:id="@+id/timeDuration"
                style="@style/homeText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
               ></project.namramuni.CustomView.CustomTextview>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>