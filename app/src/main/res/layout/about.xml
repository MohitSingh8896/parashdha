<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/rlv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/_12sdp"
        android:paddingTop="@dimen/_15sdp"
        android:paddingRight="@dimen/_5sdp"
        android:paddingBottom="@dimen/_15sdp">

        <project.namramuni.CustomView.CustomTextview
            android:singleLine="true"
            app:font1="@string/font1"
            android:includeFontPadding="false"
            android:textSize="@dimen/_13sdp"
            android:text="salkjdk has dhakshdsh fghgk "
            android:id="@+id/titleHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textColor="@color/black"
            android:maxLines="2"
            android:lines="2"
            android:layout_toLeftOf="@+id/img1"
           />
        <project.namramuni.CustomView.CustomTextview
            app:font1="@string/font2"
            android:textSize="@dimen/_9sdp"
            android:text="salkjdk has dhakshdsh fghgk "
            android:includeFontPadding="false"
            android:layout_toRightOf="@+id/img"
            android:id="@+id/txtPhone"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_below="@+id/titleHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textColor="@color/black"
            android:layout_toLeftOf="@+id/img1"
           />

        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:rotation="180"
            android:padding="@dimen/_4sdp"
            android:id="@+id/img1"
            android:layout_gravity="center"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:tint="@color/black" />
    </RelativeLayout>
    <View
        android:layout_marginLeft="@dimen/_12sdp"
        android:layout_marginRight="@dimen/_12sdp"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray1"></View>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
