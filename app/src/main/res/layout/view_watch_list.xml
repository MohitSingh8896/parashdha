<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_95sdp"
        android:layout_marginLeft="@dimen/_7sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_marginRight="@dimen/_7sdp"
        android:layout_marginBottom="@dimen/_0sdp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible">

            <RelativeLayout
                android:id="@+id/rlvYoutub"
                android:layout_width="@dimen/_159sdp"
                android:layout_height="match_parent">

                <com.google.android.youtube.player.YouTubeThumbnailView
                    android:id="@+id/videoImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black" />

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_centerInParent="true"
                    android:alpha="0.5"
                    android:background="@drawable/round" />

                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ic_play"
                    android:backgroundTint="@color/white" />

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ic_play"
                    android:backgroundTint="@color/white"
                    android:visibility="gone" />

                <project.namramuni.CustomView.CustomTextview
                    android:id="@+id/timeDuration1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:background="@color/heading1"
                    android:includeFontPadding="false"
                    android:paddingLeft="@dimen/_6sdp"
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingRight="@dimen/_6sdp"
                    android:paddingBottom="@dimen/_3sdp"
                    android:text="10:00"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_7sdp"
                    app:font1="@string/font1" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:orientation="vertical">

                <project.namramuni.CustomView.CustomTextview
                    android:id="@+id/txtTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="@dimen/_2sdp"
                    android:lines="4"
                    android:maxLines="4"
                    android:text="Increase your memory power by gyan pujan"
                    android:textColor="@color/heading1"
                    android:textSize="@dimen/_11sdp"
                    app:font1="@string/font1" />

                <project.namramuni.CustomView.CustomTextview
                    android:id="@+id/timeDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="@dimen/_2sdp"
                    android:text="March 15, 2018"
                    android:textColor="@color/heading0"
                    android:textSize="@dimen/_9sdp"
                    app:font1="@string/font1"></project.namramuni.CustomView.CustomTextview>
            </LinearLayout>

            <ImageView
                android:id="@+id/imgVideoAlbum"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/space"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:orientation="vertical"
            android:visibility="gone"></LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:visibility="gone"></LinearLayout>
</LinearLayout>