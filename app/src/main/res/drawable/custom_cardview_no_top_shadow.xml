<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <padding
                android:bottom="5dp"
                android:left="10dp"
                android:right="10dp"
                android:top="0dp" />
            <solid android:color="@color/transparent2" />
        </shape>
    </item>

    <item>
        <shape>
            <padding
                android:bottom="3dp"
                android:left="3dp"
                android:right="3dp"
                android:top="3dp" />
            <solid android:color="@color/card_shadow_1" />
            <corners android:radius="0dp" />
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
            <solid android:color="@color/card_shadow_2" />
            <corners android:radius="0dp" />
        </shape>
    </item>
    <!-- Background -->
    <item>
        <shape>
            <solid android:color="@color/card_background" />
            <corners android:radius="0dp" />
        </shape>
    </item>
</layer-list>